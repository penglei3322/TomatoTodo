<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dllo.tomatotodo.preferences.LoginActivity">

    <include layout="@layout/title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F9F9F9"
            app:tabIndicatorColor="#6DA04C"
            app:tabIndicatorHeight="0dp"
            app:tabSelectedTextColor="#EE4000" />

        <EditText
            android:id="@+id/login_name_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_history_layout_height"
            android:layout_marginTop="@dimen/item_history_text_size"
            android:maxLines="1"
            android:background="@drawable/login_et"
            android:hint=" 用户名" />

        <EditText
            android:id="@+id/login_psw_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_history_layout_height"
            android:layout_marginTop="@dimen/item_history_text_size"
            android:maxLines="1"
            android:background="@drawable/login_et"
            android:hint=" 密码" />

        <Button
            android:id="@+id/login_login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_history_text_size"
            android:background="@android:color/white"
            android:text="登录" />

        <Button
            android:id="@+id/login_register_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_history_text_size"
            android:text="注册"
            android:background="@android:color/white"
            android:visibility="gone"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/login_forget_psw_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/item_history_text_size"
                android:text="忘记密码?" />

            <TextView
                android:id="@+id/login_terms_of_service_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/item_history_text_size"
                android:text="@string/login_terms_of_service"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/login_no_have_account_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="无账号试用"
                android:textSize="@dimen/item_history_text_size"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
